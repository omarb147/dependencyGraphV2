{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src"],
      "@hoc/*": ["src/hoc/*"],
      "@type/*": ["src/type/*"],
      "@components/*": ["src/components/*"],
      "@redux/*": ["src/redux/*"]
    },
    "moduleResolution": "node"
  },
  "include": ["./src/", "Node"],
  "exclude": ["node_modules"]
}
